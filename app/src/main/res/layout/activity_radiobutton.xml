<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".radiobutton"
    android:padding="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rdgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="what is your age ???"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp" />
        <RadioButton
            android:id="@+id/below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Below 18"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/second_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-25"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/third_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-30"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/fourth_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30-50"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/fifth_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="above 50"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RadioGroup>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:gravity="center"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D5CFCF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"/>
</LinearLayout>